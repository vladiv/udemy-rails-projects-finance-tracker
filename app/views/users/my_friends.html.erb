<%= render'friends/lookup' %>

<% if @friendships.size > 0 %>
  <table class="table table-striped mt-4">
    <thead>
      <tr>
        <th colspan="3" class="border-top-0">
          <h2>My Friends</h2>
        </th>
      </tr>
      <tr>
        <th class="align-middle">Name</th>
        <th class="align-middle">Email</th>
        <th class="align-middle">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @friendships.each do |friend| %>
        <tr>
          <td class="align-middle"><%= friend.full_name %></td>
          <td class="align-middle"><%= friend.email %></td>
          <td class="align-middle">
            <%= link_to 'View Profile', user_path(friend), class: 'btn btn-sm btn-primary' %>
            <%= link_to 'Remove Friend', friendship_path(friend),
                                  :method => :delete,
                                  :data => { :confirm => "Are you sure" },
                                  :class => "btn btn-sm btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p class="lead">You don't have any friends yet. Please add some!</p>
<% end %>
