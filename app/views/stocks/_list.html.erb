<table class="table table-striped">
  <thead>
    <tr>
      <th class="align-middle">Name</th>
      <th class="align-middle">Symbol</th>
      <th class="align-middle">Current price</th>
      <% if @user.id == current_user.id %>
        <th class="align-middle">Actions</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @user_stocks.each do |user_stock| %>
      <tr>
        <td class="align-middle"><%= user_stock.name %></td>
        <td class="align-middle"><%= user_stock.ticker %></td>
        <td class="align-middle"><%= user_stock.price %></td>
        <% if @user.id == current_user.id %>
          <td class="align-middle">
            <%= link_to 'Delete', user_stock_path(user_stock),
                                  :method => :delete,
                                  :data => { :confirm => "Are you sure" },
                                  :class => "btn btn-sm btn-danger" %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
